@model ImageResizer.Models.Image

@{
    ViewBag.Title = "Crop";
}

<h2>Choose crop options</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        </dt>

        <dd>
            <img src="@Url.Content(Model.ImagePath)" />
        </dd>

    </dl>
</div>


@using (Ajax.BeginForm("Cropping", "Image",new AjaxOptions { UpdateTargetId = "divInterestDeatils" }))
{
    <fieldset>
        <legend>Enter new parameters</legend>
        <div id="divInterestDeatils"></div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Width)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Width)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Height)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Height)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.X)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.X)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Y)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Y)
        </div>
        
        <p>
            <input type="submit" value="Upload" />
        </p>

        <b>
            @Html.ActionLink("Go back", "Resize/0")
        </b>

    </fieldset>
}